{
  "description": "Session plugin hooks: captures session ID and introduces skills",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/session-capture.sh",
            "timeout": 500
          },
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/skills-intro.sh",
            "timeout": 500
          }
        ]
      }
    ]
  }
}
