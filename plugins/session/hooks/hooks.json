{
  "description": "Session plugin hooks: captures session ID and introduces skills",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/session-capture.sh",
            "timeout": 500
          },
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/skills-intro.sh",
            "timeout": 500
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "echo '<plugin-reminder>Consider loading session:delegating skill if task needs user interaction, own subagents, or exceeds subagent context.</plugin-reminder>'",
            "timeout": 100
          }
        ]
      }
    ]
  }
}
